<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@mipmap/activity_search_background">


    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </android.support.v7.widget.Toolbar>
    <TextView
            android:text="@string/about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sectionTitle" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            android:fontFamily="@font/montserrat" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/smsBtn"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/sectionTitle"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/nameLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="Gergely Attila E.V."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/name" android:fontFamily="@font/montserrat"
                    android:typeface="normal" android:textSize="14sp" android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/address"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/addrLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="2162 Őrbottyán Harang u. 8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/addr" android:fontFamily="@font/montserrat"
                    android:typeface="normal" android:textSize="14sp" android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/tax"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/taxLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="60166742-1-33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tax" android:layout_weight="1"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/tel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/telLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="+36 20 823 5036"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tel" android:layout_weight="1"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/email"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/emailLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="support@vasalka.hu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/email" android:layout_weight="1"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_margin="8dp">
            <TextView
                    android:text="@string/buildVersionLabel"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/buildVersionLabel"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary" android:textAlignment="viewEnd"
                    android:layout_marginEnd="16dp"/>

            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buildVersionText"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat" android:typeface="normal" android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
        </LinearLayout>


    </LinearLayout>

    <Button
            android:text="@string/menu_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactBtn" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@drawable/email_btn_background"
            android:paddingStart="16dp" android:paddingEnd="16dp" android:textColor="@color/white"/>

</android.support.constraint.ConstraintLayout>